/* 首页样式 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
}

.title {
  font-size: 18px;
  font-weight: 500;
  margin-top: 10px;
  color: #333;
}

.card {
  border-radius: 10px;
  margin-bottom: 20px;
  background-color: #fff;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.card-content {
  padding: 16px;
}

.devices-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 0;
}

.empty-icon {
  margin-bottom: 20px;
}

.icon-circle {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-device {
  width: 40px;
  height: 40px;
  background-color: #ddd;
  border-radius: 6px;
  position: relative;
}

.icon-device:before {
  content: '';
  position: absolute;
  width: 10px;
  height: 10px;
  background-color: #fff;
  border-radius: 50%;
  top: 15px;
  left: 15px;
}

.empty-text {
  font-size: 18px;
  color: #333;
  margin-bottom: 10px;
}

.empty-tip {
  font-size: 14px;
  color: #999;
}

.bottom-action {
  width: 100%;
  padding: 30px 0;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.add-btn {
  width: 80%;
  font-size: 18px;
  padding: 12px 0;
  border-radius: 6px;
  background-color: #1aad19;
  color: #fff;
}

.btn-primary {
  background-color: #1aad19;
  color: #fff;
}

.mt {
  margin-top: 15px;
}

.wifi-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px 0;
}

.wifi-name {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 8px;
  color: #333;
}

.wifi-detail {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.no-wifi {
  color: #999;
  padding: 15px 0;
  text-align: center;
}

.steps {
  margin: 15px 0;
}

.step {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.step-num {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 28px;
  height: 28px;
  background-color: #1aad19;
  color: white;
  border-radius: 50%;
  margin-right: 12px;
  font-size: 14px;
}

.step-text {
  font-size: 16px;
  color: #333;
}

.start-btn {
  width: 80%;
  font-size: 18px;
  padding: 12px 0;
  border-radius: 6px;
} 